<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    tools:context=".ui.dialogs.TimePickerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h"
        app:layout_constraintBottom_toBottomOf="@+id/timepicker_hou_np"
        app:layout_constraintEnd_toEndOf="@+id/timepicker_hou_np"
        app:layout_constraintTop_toTopOf="@+id/timepicker_hou_np" />

    <NumberPicker
        android:id="@+id/timepicker_hou_np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_small_margin"
        android:layout_marginStart="@dimen/activity_small_margin"
        android:layout_marginTop="@dimen/activity_small_margin"
        android:focusableInTouchMode="true"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m"
        app:layout_constraintBottom_toBottomOf="@+id/timepicker_min_np"
        app:layout_constraintEnd_toEndOf="@+id/timepicker_min_np"
        app:layout_constraintTop_toTopOf="@+id/timepicker_min_np" />

    <NumberPicker
        android:id="@+id/timepicker_min_np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_small_margin"
        android:layout_marginStart="@dimen/activity_small_margin"
        android:layout_marginTop="7dp"
        android:focusableInTouchMode="true"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/timepicker_hou_np"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        app:layout_constraintBottom_toBottomOf="@+id/timepicker_sec_np"
        app:layout_constraintEnd_toEndOf="@+id/timepicker_sec_np"
        app:layout_constraintTop_toTopOf="@+id/timepicker_sec_np" />

    <NumberPicker
        android:id="@+id/timepicker_sec_np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_small_margin"
        android:layout_marginStart="@dimen/activity_small_margin"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/activity_small_margin"
        android:layout_marginBottom="@dimen/activity_small_margin"
        android:focusableInTouchMode="true"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/timepicker_min_np"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>