<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/font_headline_size</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- <item name="android:textStyle">bold</item> -->

    <!-- essayer pour null : ?attr/selectableItemBackgroundBorderless -->

    <style name="SecondaryTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/font_medium_size</item>
    </style>


    <!-- Widgets -->

    <style name="BorderlessButtonPrimary">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="BorderlessButtonSecondary">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/primaryTextColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="ButtonPrimary">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="tabIndicatorColor">@color/secondaryColor</item>
        <item name="tabTextColor">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item> <!-- @color/primaryTextColor or @color/secondaryColor -->
    </style>

    <style name="ButtonSecondary">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="tabTextColor">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item> <!-- @color/primaryTextColor or @color/secondaryColor -->
    </style>

    <style name="ImageButtonPrimary" parent="@android:style/TextAppearance.Medium">
        <item name="android:colorForeground">@color/primaryDarkColor</item>
        <item name="android:tint">@color/primaryDarkColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/font_medium_size</item>
    </style>

    <style name="ImageButtonSecondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:colorForeground">@color/secondaryColor</item>
        <item name="android:tint">@color/secondaryColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/font_medium_size</item>
    </style>

    <style name="FloatingActionButton">
        <item name="tint">@color/secondaryTextColor</item>
    </style>

    <style name="NumberPickerEditText" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/text_line</item>
        <item name="android:radius">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:padding">@dimen/activity_small_margin</item>
    </style>

    <style name="CaldroidDefaultCustom" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultCalendarViewLayout</item>
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidDefaultRightButton</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultMonthName</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultGridView</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultSquareCell</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultWeekday</item>
    </style>

    <style name="CaldroidDefaultCalendarViewLayout">
        <item name="android:background">@color/caldroid_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CaldroidDefaultArrowButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="CaldroidDefaultLeftButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/left_arrow</item>
    </style>

    <style name="CaldroidDefaultRightButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/right_arrow</item>
    </style>

    <style name="CaldroidDefaultMonthName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="CaldroidDefaultGridView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:listSelector">@null</item>
        <item name="android:background">@color/caldroid_white</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="CaldroidDefaultCell">
        <item name="android:textColor">@color/cell_text_color</item>
        <item name="android:background">@drawable/cell_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CaldroidDefaultNormalCell" parent="CaldroidDefaultCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CaldroidDefaultSquareCell" parent="CaldroidDefaultCell" />

    <style name="CaldroidDefaultWeekday">
        <item name="android:textColor">@color/caldroid_middle_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>


</resources>
